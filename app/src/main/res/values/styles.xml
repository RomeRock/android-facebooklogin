<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="buttonStyleMain" parent="@android:style/Widget.Button.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:width">80sp</item>
        <item name="android:textSize">@dimen/boton_text_size</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="currencyLanguage" parent="@android:style/Widget.Button.Small">
        <item name="android:textColor">#343434</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/language_text_size</item>
        <item name="android:background">@color/centerDetect</item>
    </style>
    <style name="textLanguage" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#17B0EF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="paddingsContainer">
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
    </style>
    <style name="tittleSettings">
        <item name="android:padding">@dimen/tittle_settings</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tittle_settings</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tittleSettingsSymbol">
        <item name="android:paddingTop">@dimen/tittle_settings_symbol</item>
        <item name="android:paddingBottom">@dimen/tittle_settings_symbol</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tittle_settings</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="name_profile_style">
         <item name="android:layout_alignParentLeft">true</item>
         <item name="android:gravity">center</item>
         <item name="android:layout_marginTop">15sp</item>
        <item name="android:textColor">@color/setting_text_color_list</item>
         <item name="android:textSize">20sp</item>
    </style>
    <style name="logout_profile">
         <item name="android:textSize">16sp</item>
         <item name="android:background">@drawable/border_top_logout</item>
         <item name="android:textColor">@color/text_logut</item>
         <item name="android:paddingBottom">16sp</item>
        <item name="android:paddingTop">16sp</item>
         <item name="android:layout_alignParentBottom">true</item>
         <item name="android:gravity">right</item>
    </style>
    <style name="gender_profile">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="FacebookLoginButton">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/facebook_boton</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:padding">13sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
